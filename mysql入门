DDL

【修改表字段】
 	修改表USER 里面的 username_name 字段为varchar(50) not null
	ALTER TABLE USER MODIFY user_name varchar(50);
	ALTER TABLE USER MODIFY user_name  varchar(50) not null;

 	修改表USER 里面的 email 字段为 user_email varchar(50) not null
	alter table USER change email user_email varchar(50) not null;

	添加字段
	alter table USER add password char(32) not null comment '用户密码';

	添加字段
	alter table USER add password char(32) not null comment '用户密码' after name;
	alter table USER add moblie char(11) not null comment '手机号码';


